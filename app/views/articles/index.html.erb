<h1>My articles</h1>

<%= link_to "New Article", new_article_path %>

<ul>
  <% @articles.each do |article| %>
   <% if current_user.id == article.user_id %>
    <% unless article.draft? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
   <% end %>
  <% end %>
</ul>

<p><a href="/draft/">Go to my drafts</a></p>
<a href="/">Home page</a>