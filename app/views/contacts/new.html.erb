<h1>Contact Form</h1>
<%= form_with url: contacts_path do |form|%>
<div>
  <%= form.label :name %><br />
  <%= form.text_field :name, value: (current_user.first_name if user_signed_in?), required:true %><br>
</div>

<div>
  <%= form.label :email %><br />
  <%= form.text_field :email, value: (current_user.email if user_signed_in?), required:true %><br>
</div>

<div>
  <%= form.label :message %><br />
  <%= form.text_area :message, required:true %><br>
</div>

<%= form.submit "send" %>
<% end %>