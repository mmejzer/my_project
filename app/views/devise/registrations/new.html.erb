<div class="sign-up">
  <div class="container">
   <h2><div class="header">Sign up</div></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="errors">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="field">
        <p><%= f.label :first_name, class: "legend" %></p>
        <%= f.text_field :first_name, autofocus: true, required:true, autocomplete: "first-name", placeholder: "Write your name here..", class: "input" %>
       </div>

      <div class="field">
        <p><%= f.label :last_name, class: "legend" %></p>
        <%= f.text_field :last_name, autofocus: true, required:true, autocomplete: "last-name", placeholder: "Write your surname here..", class: "input" %>
      </div>

      <div class="field">
        <p><%= f.label :email, class: "legend" %></p>
        <%= f.email_field :email, autofocus: true, required:true, autocomplete: "email", placeholder: "Write your email here..", class: "input" %>
      </div>

      <div class="field">
        <p><%= f.label :password, class: "legend" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %></p>
        <%= f.password_field :password, autofocus: true, required:true, autocomplete: "new-password", placeholder: "Create and write your passord..", class: "input" %>
      </div>

      <div class="field">
        <p><%= f.label :password_confirmation, class: "legend" %></p>
        <%= f.password_field :password_confirmation, autofocus: true, required:true, autocomplete: "new-password", placeholder: "Repet password..", class: "input" %>
      </div>
        </br>
      <div class="actions bt">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
