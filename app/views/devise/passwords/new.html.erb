<div class="fogot">
  <div class="container">
  <h2><div class="header">Forgot your password?</div></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="errors">
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

    <div class="field">
      <p><%= f.label :email, class: "legend" %></p>
      <%= f.email_field :email, autofocus: true, required:true, autocomplete: "email", placeholder: "Email", class: "input" %>
    </div>

    <div class="actions bt">
      <%= f.submit "Send me reset password instructions", class: "button"  %>
    </div>
  <% end %>
</div>
